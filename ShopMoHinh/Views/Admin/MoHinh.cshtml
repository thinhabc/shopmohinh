@using ShopMoHinh.Models
@using PagedList.Mvc;
@model PagedList.PagedList<ShopMoHinh.Models.MoHinh>

@{
    ViewBag.Title = "MoHinh";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    table a
    {
        display: block;
        text-decoration: none;
        padding: 0 5px;
        border: 1px solid #ddd;
        margin: 5px 0;
    }
    .menu li{
        padding: 10px 0;
        display:inline;
    }
    .menu li a {
        display: block;
        padding: 0px 10px;
        border: 1px solid #ddd;
        text-decoration: none;
        margin: 0 5px;
    }
    img{
        max-width: 150px;
        height: 200px;
        object-fit: cover;
    }
    .text-gradient {
    background: linear-gradient(to right, red, yellow);
    color: transparent;
    -webkit-background-clip: text;
    background-clip: text;
 
}
</style>

<div class="container">
    <h4 style="text-align:center; color:springgreen">QUẢN LÝ SẢN PHẨM SHOP MÔ HÌNH</h4>

    <p>
        @Html.ActionLink("Thêm mới", "addNewProduct")
    </p>
    <table class="table">
        <tr>
            <th>
                Tên mô hình
            </th>
            <th>
                Giá bán
            </th>
            <th>
                Mô tả
            </th>
            <th>
                Ảnh bìa
            </th>
            <th>
                Ngày cập nhật
            </th>
            <th>
                Số lượng tồn
            </th>
            <th>
                Tên chủ đề
            </th>
            <th>
                Tên NSX
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="text-gradient">
                    @Html.DisplayFor(modelItem => item.TenMoHinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GiaBan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MoTa)
                </td>
                <td>
                    <img src="@Url.Content("~/" + item.AnhBia)" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayCapNhat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuongTon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChuDe.TenChuDe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NhaXuatBan.TenNXB)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MaMoHinh })
                    @Html.ActionLink("Delete", "Delete", new { id = item.MaMoHinh })
                </td>
            </tr>
        }

    </table>

    Trang @(Model.PageCount<Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount;
    <div class="menu" >
        @Html.PagedListPager(Model, page => Url.Action("MoHinh", new { page = page}))
    </div>
</div>