
@using ShopMoHinh.Models
@using PagedList.Mvc;
@model PagedList.PagedList<ShopMoHinh.Models.KhachHang>
@{
    ViewBag.Title = "KhachHang";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h4 style="text-align:center; color:springgreen">Quản lý thông tin khách hàng</h4>

    <p>
        @Html.ActionLink("Thêm mới", "addNewKH")
    </p>
    <table class="table">
        <tr>
            <th>
                Họ tên khách hàng
            </th>
            <th>
                tài khoản
            </th>
            <th>
                Mật khẩu
            </th>
            <th>
                Địa chỉ Email
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Ngày sinh
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaiKhoan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MatKhau)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiachiKH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DienThoaiKH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgaySinh)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MaKH })
                    @Html.ActionLink("Delete", "DeleteKH", new { id = item.MaKH })
                </td>
            </tr>
        }

    </table>
    Trang @(Model.PageCount<Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount;
    <div class="menu">
        @Html.PagedListPager(Model, page => Url.Action("KhachHang", new { page = page }))
    </div>
</div>
