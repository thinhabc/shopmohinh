@using ShopMoHinh.Models
@using PagedList.Mvc;
@model PagedList.PagedList<ShopMoHinh.Models.DonDatHang>

@{
    ViewBag.Title = "DonDatHang";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<style>
    table a {
        display: block;
        text-decoration: none;
        padding: 0 5px;
        border: 1px solid #ddd;
        margin: 5px 0;
    }

    .menu li {
        padding: 10px 0;
        display: inline;
    }

        .menu li a {
            display: block;
            padding: 0px 10px;
            border: 1px solid #ddd;
            text-decoration: none;
            margin: 0 5px;
        }

    img {
        max-width: 150px;
        height: 200px;
        object-fit: cover;
    }

    .text-gradient {
        background: linear-gradient(to right, red, yellow);
        color: transparent;
        -webkit-background-clip: text;
        background-clip: text;
    }
</style>

<div class="container">
    <h4 style="text-align:center; color:springgreen">QUẢN LÝ ĐƠN HÀNG SHOP MÔ HÌNH</h4>
    <table class="table">
        <tr>
            <th>
                Tên khách hàng
            </th>
            <th>
                Ngày đặt hàng
            </th>
            <th>
                Ngày giao hàng
            </th>
            <th>
                Đã thanh toán
            </th>
            <th>
                Tình trạng đơn hàng
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="text-gradient">
                    @Html.DisplayFor(modelItem => item.KhachHang.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayDH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayGiao)
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.DaThanhToan)
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.TinhTrangGiaoHang)
                </td>
            </tr>
        }

    </table>

    Trang @(Model.PageCount<Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount;
    <div class="menu">
        @Html.PagedListPager(Model, page => Url.Action("MoHinh", new { page = page }))
    </div>
</div>