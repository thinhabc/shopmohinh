<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/tinymce/js/tinymce/tinymce.min.js"></script>
    <script> tinymce.init({ selector: 'textarea' });</script>
    <style>
        .container {
            width: 1200px;
            margin: auto;
            margin-top: 20px;
        }
        table a {
            display: block;
            text-decoration: none;
            padding: 0 5px;
            border: 1px solid #ddd;
            margin: 5px 0;
        }

        .menu li {
            padding: 10px 0;
            display: inline;
        }

            .menu li a {
                display: block;
                padding: 0px 10px;
                border: 1px solid #ddd;
                text-decoration: none;
                margin: 0 5px;
            }
    </style>
</head>
<body>
    <ul class="nav justify-content-center" style=" background: #000; text-transform: uppercase;">
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="@Url.Action("Index","Admin")">
                Trang chủ
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("MoHinh", "Admin")">
                Quản lý Sản Phẩm
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("LoaiMH", "Admin")">
                Quản Lý Chủ Đề
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("KhachHang", "Admin")">
                Quản Lý Khách Hàng
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("DonDatHang", "Admin")">
                Quản Lý Đơn Hàng
            </a>
        </li>

    </ul>
    <div>
        @RenderBody()
    </div>
</body>
</html>
