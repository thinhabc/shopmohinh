@model IEnumerable<ShopMoHinh.Models.MoHinh>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/shopMohinh.cshtml";
}


<div class="banner">
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Asset/Images/banner-2.....jpeg" class="d-block w-100" alt="...">
                <div class="carousel-caption ">
                    <h3>Mang đến cho bạn </h3>
                    <P class="heading">Sản phẩm giá rẻ chất lượng</P>
                    <p class="sub">Mô hình Figure là nơi đáng tin cậy để dành cho những người theo đuổi đam mê, vẻ đẹp của các nhân vật mình yêu thích</p>
                    <button type="button" class="btn btn-primary btn-lg">Khám phá ngay</button>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Asset/Images/banner-3.....jpeg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h4>Theo dõi shop để nhận ngay ưu đãi</h4>
                    <p class="heading">Đã chơi là phải chất <br> Nếu không thì đem cất</p>
                    <button type="button" class="btn btn-primary btn-lg">Follow ngay</button>
                    <button type="button" class="btn btn-secondary btn-lg">Tìm hiểu thêm</button>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Asset/Images/banner-4.....jpeg" class="d-block w-100" alt="...">
            </div>
        </div>
    </div>
</div>

<div class="container">
