                <h6>Sở hữu ngay</h6>
                <p>Mô hình Dragon Ball</p>
            </div>
        </div>
        <div class="product-banner">
            <a href="">
                <div class="imgbox">
                    <img src="~/Asset/Images/mo-hinh-one-piece-banner..jpeg" alt="">
                </div>
            </a>
            <div class="content">
                <h6>Sở hữu ngay</h6>
                <p>Mô hình One Piece</p>
            </div>
        </div>
        <div class="product-banner">
            <a href="">
                <div class="imgbox">
                    <img src="~/Asset/Images/mo-hinh-naruto-banner..jpeg" alt="">
                </div>
            </a>
            <div class="content">
                <h6>Sở hữu ngay</h6>
                <p>Mô hình Naruto</p>
            </div>
        </div>
    </div>
    <div class="banner-product mb-20">
        <div class="product-banner">
            <a href="">
                <div class="imgbox">
                    <img src="~/Asset/Images/mo-hinh-pokemon-banner..jpeg" alt="">
                </div>
            </a>
            <div class="content">
                <h6>Sở hữu ngay</h6>
                <p>Mô hình Pokemon</p>
            </div>
        </div>
        <div class="product-banner_2">
            <a href="">
                <div class="imgbox">
                    <img src="~/Asset/Images/mo-hinh-anime-banner..jpeg" alt="">
                </div>
            </a>
            <div class="content">
                <h6>Sở hữu ngay</h6>
                <p>Mô hình Anime</p>
            </div>
        </div>
    </div>
</div>

<div class="container" style="max-width: 1080px;">
    <div class="title">
        <h1 class="text-uc">Mô hình figure bán chạy nhất</h1>
    </div>
    <section>
        <div class="move">
            <span>&#139</span>
            <span>&#155</span>
        </div>
        @foreach (var mohinh in Model)
        {
            <div class="product">
                <a href="@Url.Action("Details","Home", new { id = mohinh.MaMoHinh })">
                    <div class="overlay"></div>
                    <picture>
                        <img src="~/@mohinh.AnhBia" alt="@mohinh.TenMoHinh">
                    </picture>
                    <div class="details">
                        <small class="text-uc">mô hình anime</small>
                        <p>@mohinh.TenMoHinh-</p>
                        <span>@mohinh.GiaBan VND</span>
                    </div>

                    <div class="button view ">
                       <span class="js-view">Quick view</span>
                    </div>
                </a>
            </div>
        }

    </section>
</div>

<div class="container" style="max-width: 1080px;">
    <div class="title">
        <h1 class="text-uc">Mô hình figure mới nhất</h1>
    </div>

    <div class="product-list">
        @foreach (var mohinh in Model)
        {
             
        <div class="product-new" style="height: 280px;">
            <a href="@Url.Action("Details","Home", new { id = mohinh.MaMoHinh })">
                <picture>
                    <img src="~/@mohinh.AnhBia" alt="">
                </picture>
                <div class="details size">
                    <small class="text-uc">mô hình anime</small>
                    <p>@mohinh.TenMoHinh</p>
                    <span>@mohinh.GiaBan VND</span>
                    <div class="button js-view">
                        <span>Quick view</span>
                    </div>
                </div>
            </a>
        </div>
        }
    </div>
</div>

